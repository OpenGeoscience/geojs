doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    link(rel="shortcut icon", href="data:image/x-icon;,", type="image/x-icon")
    title= title

    // include the main bundle
    script(type='text/javascript', src=bundle, charset='UTF-8')

    // Include example specific css
    each css in exampleCss
      link(rel="stylesheet", href=css)
  body
    if !hideNavbar
      // Add a navbar
      nav.navbar.navbar-dark.bg-primary(role="navigation")
            a.navbar-brand(href="https://github.com/OpenGeoscience/geojs", target="gj-homepage") GeoJS

            block headerButtons
            ul.nav.navbar-nav.ml-auto.navbar-right
              block screenShot
                li.nav-item
                  a.nav-link.gj-screenshot-link(tabindex=0)
                    | Screenshot
                li.nav-item.gj-screenshot-waiting
                  a.nav-link ...
                li.nav-item.gj-screenshot-result
                  a.nav-link.gj-screenshot-download(download='screenshot.png')
                    img
              block showSource
                if docHTML
                  li.nav-item
                    a.nav-link.gj-show-source-link(href=docHTML, target="gj-docco")
                      | Source
              if !about.hidden
                li.nav-item
                  a.nav-link.gj-show-about-link(href="#", data-toggle="modal", data-target="#about-modal")
                    | About

      if ! about.hidden
        // Add an about modal dialog
        .modal.fade#about-modal
          .modal-dialog.modal-md
            .modal-content
              .modal-header
                h4.modal-title !{about.title || title}
              .modal-body
                p.text-left !{about.text}
                p.text-right Â© Kitware, Inc.
              .modal-footer
                button.btn.btn-primary(data-dismiss="modal", data-target="#about-modal") Close

    // Add the default main content element
    block mainContent
      #map

    // Include example specific scripts
    each src in exampleJs
      if(typeof src === "string")
        script(type="text/javascript", src=src)
      else
        script&attributes(src)
