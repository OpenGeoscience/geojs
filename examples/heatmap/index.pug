          td
            input#gradR4(type="number", min=0, max=255, step=1)
          td
            input#gradG4(type="number", min=0, max=255, step=1)
          td
            input#gradB4(type="number", min=0, max=255, step=1)
          td
            input#gradA4(type="number", min=0, max=1, step=0.01)
        tr
          td
